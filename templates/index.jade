    script(type='text/javascript').
        var curAngle = 0.0; //Current Hue Shift degrees

        var mx = 0, my = 0; // relative to the logo
        var $logo = $('#start-logo');
        var offset = $logo.offset();
        var centerX = offset.left + $logo.width()/2;
        var centerY = offset.top + $logo.height()/2;

        function step() {

            var dx = mx - centerX,
                dy = my - centerY,
                len = Math.sqrt(dx * dx + dy * dy);
            dx /= len ? len : 1.0; dy /= len ? len : 1.0;
            // get current direction
            var dirx = Math.cos(curAngle),
              diry = Math.sin(curAngle);
            // ease the current direction to the target direction
            dirx += (dx - dirx) * 0.1;
            diry += (dy - diry) * 0.1;

            curAngle = Math.atan2(diry, dirx);

            var filterVal = 'hue-rotate('+ ((curAngle*180)/Math.PI - 90) +'deg)';
            $('#start-logo')
              .css('filter',filterVal)
              .css('webkitFilter',filterVal)
              .css('mozFilter',filterVal)
              .css('oFilter',filterVal)
              .css('msFilter',filterVal);

            requestAnimationFrame(step);
        }

        $(document).mousemove(function( event ) {
            mx = event.pageX,
            my = event.pageY;
        });

        step();

    script(type='text/javascript').
        //Show/Hide header bar
        $(document).scroll(function() {
            var $section = $('#start');
            if($(window).scrollTop() >= $section.outerHeight()) {
                $('header').css('opacity','1');
                $('header').css('pointer-events','');
            } else {
